<Layer>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1.0 #Will change color later
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows:3
        BoxLayout:
            size_hint:1,0.1
            Label:
                size_hint: 0.4,1            
                text: "Neurons: "
            TextInput:
                id: neurons
                multiline: False
                size_hint: 0.3,1
                text: "1"
        Label:
            text: "Padding"
            size_hint: 1,0.8
        BoxLayout:
            size_hint: 1,0.1
            Label:
                size_hint: 0.7,1
                text : "Activation : "
            Spinner:
                size_hint: 0.3,1
                id: activation_fn
                text: "sigmoid"                   #default value showed
                values: ["sigmoid","relu","elu","selu","tanh","softmax","linear"]       #list of values to show
    
<Middle>:
    Layer:
    Layer:

<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.137, 0.149, 0.161, 1.0 #Will change color later
            Rectangle:
                pos: self.pos
                size: self.size
        #1/3 MainScreen
        FloatLayout:
            pos_hint: {"x":0,"y":0.7}
            size_hint:1,0.3
            Button:
                text: "Readme"
                pos_hint: {"x":0.,"y":.9}
                size_hint: 0.1,0.1
                on_press:  root.open_browser(tutorial=True)             
            Button:
                text: "Help"
                pos_hint: {"x":0.1,"y":.9}
                size_hint: 0.1,0.1
                on_press:  root.open_browser(help=True)             
            ToggleButton:
                id:start_btn
                pos_hint: {"x":0,"y":.35}
                border: 0,0,0,0
                size_hint: 0.1,0.3
                background_color:(0.137, 0.149, 0.161, 1.0)
                background_normal:'Frontend/imgs/play.png'
                background_down: 'Frontend/imgs/pause.png'
                on_state: 
                    if self.state=="normal": root.pause()
                    else: root.start()           
            Button:
                pos_hint: {"x":0.1,"y":.35}
                border: 0,0,0,0
                size_hint: 0.1,0.3
                background_normal:'Frontend/imgs/reset.png'
                on_press: root.reset()
            Label:
                text: "Optimization Technique: "
                pos_hint: {"x":0.2,"y":0.8}
                size_hint: 0.2,0.2
            Spinner:
                pos_hint: {"x":0.4,"y":0.8}
                size_hint: 0.2,0.2
                id: optimizer
                text: "SGD"                   #default value showed
                values: ["SGD","RMSprop","Adagrad","Adam","Adamax","Nadam","Adadelta"]       #list of values to show
                on_text:
                    root.optimizer=optimizer.text

            Label:
                text: "Loss Function: "
                pos_hint: {"x":0.6,"y":0.8}
                size_hint: 0.2,0.2
            Spinner:
                pos_hint: {"x":0.8,"y":0.8}
                size_hint: 0.2,0.2
                id: loss_fn
                text: "sparse_categorical_crossentropy"                   #default value showed
                values: ["sparse_categorical_crossentropy","binary_crossentropy","categorical_crossentropy","mean_squared_error","mean_absolute_error","huber_loss","cosine_proximity","poisson"]       #list of values to show
                on_text:
                    root.loss_fn=loss_fn.text
            Label:
                pos_hint: {"x":0.2,"y":0.5}
                size_hint: 0.05,0.05            
                text: "Epochs: "
            Label:
                pos_hint: {"x":0.25,"y":0.5}
                size_hint: 0.05,0.05            
                id:epochs
                text: "1"
            Button:
                pos_hint: {"x":0.30,"y":0.5}
                size_hint: 0.025,0.05
                text: "+"
                on_press: 
                    root.change_epoch(Incr=True)
            Button:
                pos_hint: {"x":0.325,"y":0.5}
                size_hint: 0.025,0.05
                text: "-"
                on_press: 
                    root.change_epoch(Decr=True)
            Label:
                pos_hint: {"x":0.35,"y":0.45}
                size_hint: 0.1,0.2            
                text: "Learning rate: "
            TextInput:
                multiline:False
                id: lr
                pos_hint: {"x":0.45,"y":0.45}
                size_hint: 0.1,0.15            
                id:lr
                text: "0.01"
                on_text: 
                    root.lr=str(lr.text)
            Label:
                text: "Weights Intialization: "
                pos_hint: {"x":0.55,"y":0.4}
                size_hint: 0.2,0.2
            Spinner:
                pos_hint: {"x":0.75,"y":0.4}
                size_hint: 0.2,0.2
                id: kernal_init
                text: "he_normal"                   #default value showed
                values: ["he_normal","he_uniform","lecun_normal","lecun_uniform","glorot_normal","glorot_uniform","RandomNormal","RandomUniform","Orthogonal"]       #list of values to show
                on_text:
                    root.kernal_init=kernal_init.text
                    
            Button:
                pos_hint: {"x":0.0,"y":0.} 
                size_hint: 0.2,0.2
                text: "Add Layer"
                id: add_layer_btn
                on_press: mid.add_layer()
            Button:
                pos_hint: {"x":0.2,"y":0.} 
                size_hint: 0.2,0.2
                id: remove_layer_btn
                text: "Remove Layer"
                on_press: mid.remove_layer()
            Label:
                pos_hint: {"x":0.4,"y":0.}
                size_hint: 0.12,0.2
                text: "Batch Normalization"
            CheckBox:
                pos_hint: {"x":0.52,"y":0.} 
                size_hint: 0.03,0.2                
                active: True
                on_active: root.batch_normalization=self.active
            Label:
                id:stats
                pos_hint: {"x":0.55,"y":0.}
                size_hint: 0.45,0.2
                text: ""

        #2/3 MainScreen
        Middle:
            id: mid
            pos_hint: {"x":0,"y":.15}
            size_hint:1,0.55
        #3/3 MainScreen ---> Done
        GridLayout:
            size_hint: 1,0.15 
            cols: 3
            Button:
                text: "Save Current Model"
                on_press: root.save_model()
            Button:
                text: "Visualize Training"
                on_release: root.show_img(Train=True)
            Button:
                text: "Browse training data(*.csv)"
                on_release: root.get_csv_file(Train=True)
            Button:
                text: "Load Existing Model"
                on_release: root.get_h5_file()
            Button:
                text: "Visualize Testing"
            Button:
                text: "Browse testing data(*.csv)"
                on_release: root.get_csv_file(Test=True)
            Button:
                text: "Report a Bug"
                on_press: root.open_browser(bug=True)
            BoxLayout:
                Label:
                    size_hint: 0.3,1
                    text:"Label at start"
                CheckBox:
                    size_hint: 0.1,1
                    id: label_start
                    active: True
                    on_active: root.label_at_start=self.active
                Label:
                    size_hint: 0.5,1
                    text: "Smart Preprocess Data"
                CheckBox:
                    id: smart_preprocess
                    size_hint: 0.1,1
                    active: True
                    on_active: root.smart_preprocess=self.active
                       
            BoxLayout:
                Label:
                    size_hint: 0.4,1
                    text: "Validation Split: "
                Slider:
                    size_hint: 0.5,1
                    id: validation_split
                    min: 0
                    max: 90
                    step: 10
                    orientation: 'horizontal'
                    on_value: 
                        root.validation_split=self.value 
                Label:
                    size_hint: 0.1,1
                    text: str(validation_split.value)+str("%")


